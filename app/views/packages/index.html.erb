<div class="d-flex justify-content-between mb-1">
  <%= link_to 'Add Package', new_supplier_package_path, class: "btn btn-success btn-sm" %>
</div>
<div class="container">
  <div class="row justify-content-start">
    <% @packages.each do |package| %>
      <div class="col-4 mb-3">
        <div class="card text-center bg-white pb-2">
          <div class="card-body text-dark">
                     <% if package.image.present?%>
            <%= image_tag package&.image.variant(resize_to_fill: [300, nil])  %>
          <% end %>
            <h1 class="card-title"><%= package.name %></h1>
            <h6><%= package.description %></h6>
            <%= link_to '', edit_supplier_package_path(@supplier, package), class:"bi bi-pencil text-primary" %>
            <%= link_to '',supplier_package_path(@supplier, package), class:"bi bi-trash text-danger", data: { "turbo-method": :delete }%>
            <%= link_to '',supplier_package_path(@supplier, package), class:"bi bi-eye-fill" %>
            <%= content_tag :span, class: "badge #{package_status(package.status)}" do %>
              <%=package.status %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


