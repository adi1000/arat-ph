
 <form>
    <div class="form-outline mb-4">
      <label class="form-label" for="form7Example3">Package name :</label>
      <%= @package.name %>
    </div>

    <div class="form-outline mb-4">
      <% @package.amenities.each do |a| %>
        <%= a.name %>
      <% end %>
    </div>
        <div class="form-outline mb-4">
            <label class="form-label" for="form7Example7">Company Logo :</label>
            <% if @package.image.present?%>
              <%= image_tag @package&.image.variant(resize_to_fill: [50, nil])  %>
            <% end %>
          </div>

  <div>
    <%= link_to 'Edit', edit_supplier_package_path(@supplier, @package), class:"btn btn-primary btn-sm" %>
    <%= link_to 'Back', supplier_packages_path(@supplier, @package), class:"btn btn-dark btn-sm" %>
  </div>
</form>
