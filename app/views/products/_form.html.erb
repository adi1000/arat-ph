<div class="container">
  <%= form_with(model: [supplier, product]) do |f| %>
    <% if product.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this student from being saved:</h2>

        <ul>
          <% product.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="card-body p-4 p-sm-5">
      <h5 class="card-title text-center mb-5 fw-light fs-5"></h5>
      <form>

        <div class="form-floating mb-3">
          <%= f.text_field :name, class:"form-control", id:"floatingInputfirstname", placeholder:"firstname" %>
          <%= f.label :name, for:"floatingInputFirstName" %>
        </div>
        <div class="form-floating mb-3">
          <%= f.text_field :product_type, class:"form-control", id:"floatingInputlastname", placeholder:"lastname" %>
          <%= f.label :product_type, for:"floatingInputLastName" %>
        </div>
        <div class="d-grid mb-2">
          <%= f.submit "Save", class:"btn btn-lg btn-primary btn-login fw-bold text-uppercase" %>
        </div>


        <hr class="my-4">

      </form>
    </div>
  <% end %>
</div>


