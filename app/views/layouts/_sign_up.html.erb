 <div class="container-fluid bg-image-authentication">
  <div class="row">
    <div class="col-xxl-4 col-xl-4 col-md-3 col-sm-3 col-xs-12"></div>
      <div class="col-xxl-4 col-xl-4 col-md-6 col-sm-6 col-xs-12">
        <div class="arat border-secondary rounded-3 bg-light bg-gradient text-dark px-5 pb-5 ">
          <div class="text-center py-4">
           <h1>Create Account</h1>
          </div>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name),data: { turbo: false }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.fields_for :supplier, resource.build_supplier  do |supplier_form| %>
                        <div class="form-outline mb-4">
              <%= supplier_form.text_field :name, class:"form-control", id:"floatingInputname", placeholder:"company / supplier name" %>
              </div>

              <div class="form-outline mb-4">
                <%= supplier_form.text_field :address, class:"form-control", id:"floatingaddress", placeholder:"address" %>
              </div>

              <div class="form-outline mb-4">
                <%= supplier_form.text_field :phone_number, class:"form-control", id:"floatingphonenumber", placeholder:"phone number" %>
              </div>

              <div class="form-outline mb-4">
                <%= supplier_form.text_field :name, class:"form-control", id:"floatingTelephone", placeholder:"Telephone" %>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form_group_for(f, :email, label: false) do %>
                <%= f.email_field :email, autocomplete: "current-password", class:"form-control", placeholder:"email" %>
              <% end %>
            </div>
            <div class="mb-3">
              <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Password" %>
            </div>
            <div class="mb-3">
              <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control", placeholder:"Password Confirmation" %>
            </div>

            <div class="mb-3">
              <%= f.submit "Create Acoount", class:"btn btn-success  w-100" %>
            </div>
            <p class="text-center"><%= render "devise/shared/sessions_login"%></p>
          <% end %>

        </div>
      </div>
      <div class="col-xxl-4 col-xl-4 col-md-3 col-sm-3 col-xs-12"></div>
    </div>
  </div>

